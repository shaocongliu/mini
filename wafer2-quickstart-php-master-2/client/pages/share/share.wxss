/* pages/share/share.wxss */

.container {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.background {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 404rpx;
}

.background-img {
  width: 100%;
  height: 404rpx;
}

.album {
  position: absolute;
  background: white;
  width: 302rpx;
  height: 302rpx;
  top: 51rpx;
  left: 224rpx;
  z-index: 1;
}

.album image {
  width: 302rpx;
  height: 302rpx;
}

.msg {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 100%;
  height: 394rpx;
  border-bottom: 0.1rpx solid #e2e2e2;
  padding-bottom: 18rpx;
}

.msg textarea {
  width: 100%;
  height: 394rpx;
}

.msg_tab {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  position: absolute;
}

.chars {
  margin-right: 30rpx;
  color: #c6c6c6;
}

.smileface {
  margin-right: 34rpx;
  width: 54rpx;
  height: 54rpx;
}

.sharebtn {
  position: absolute;
  left: 24rpx;
  bottom: 31rpx;
  height: 106rpx;
  width: 703rpx;
  border-radius: 26rpx;
  z-index: 2;
  background: rgba(0, 0, 0, 0);
}

.sharebtn::after {
  border: none;
}

.share-img {
  position: absolute;
  bottom: 31rpx;
  left: 24rpx;
  height: 106rpx;
  width: 703rpx;
  z-index: 1;
}
